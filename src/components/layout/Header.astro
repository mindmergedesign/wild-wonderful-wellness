---
// Components
import NavBar from '@/components/elements/navigation/NavBar.astro'
import Container from '@/components/layout/Container.astro'

// Misc
const { class: className, ...rest } = Astro.props
const pathname = Astro.url.pathname
---

<header>
	<div
		class={`bg-background mx-auto flex justify-between border-b transition-all duration-300 ease-in-out ${className}`}
	>
		<Container>
			<NavBar pathname={pathname} />
		</Container>
	</div>
</header>
