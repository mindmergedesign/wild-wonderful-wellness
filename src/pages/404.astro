---
// Packages

// Components
import Layout from '@/layouts/Layout.astro'
---

<Layout>
	<main
		id="main-content"
		class="grid min-h-full place-items-center bg-white px-6 py-24 sm:py-32 lg:px-8"
	>
		<div class="text-center">
			<p class="text-primary text-base font-semibold">404</p>
			<h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">
				Page not found
			</h1>
			<p class="mt-6 text-base leading-7 text-gray-600">
				Sorry, we couldn&apos;t find the page you&apos;re looking for.
			</p>
			<div class="mt-10 flex items-center justify-center gap-x-6">
				<a
					href="/"
					class="bg-primary hover:bg-primary/80 focus-visible:outline-primary rounded-md px-3.5 py-2.5 text-sm font-semibold text-white no-underline shadow-xs focus-visible:outline-2 focus-visible:outline-offset-2"
					>Go back home</a
				>
			</div>
		</div>
	</main>
</Layout>
